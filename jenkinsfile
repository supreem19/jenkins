pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                echo 'Checkout Stage'
                checkout([$class: 'GitSCM', branches: [[name: '*/master']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/anilbitmca/Python_Work.git']]])
            }
        }
        stage('Build') {
            steps {
                echo 'Build Stage'
                bat 'python LargestElement.py'
            }
        }
        stage('Test') {
            steps {
                echo 'Test Stage'
            }
        }
        stage('Deployment') {
            steps {
                echo 'Deployment Stage'
            }
        }
    }
}
