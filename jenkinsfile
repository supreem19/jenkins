pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                echo 'Checkout Stage'
            }
        }
        stage('Build') {
            steps {
                echo 'Build Stage'
                sh 'python --version'
            }
        }
        stage('Test') {
            steps {
                echo 'Test Stage'
            }
        }
        stage('Deployment') {
            steps {
                echo 'Deployment Stage'
            }
        }
    }
}
